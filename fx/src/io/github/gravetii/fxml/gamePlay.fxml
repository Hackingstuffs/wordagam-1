<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1">
   <top>
        <Button id="goBtn" fx:id="goBtn" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onGoBtnClick" prefHeight="80.0" prefWidth="250.0" text="GO" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
         <BorderPane.margin>
            <Insets bottom="15.0" top="20.0" />
         </BorderPane.margin>
        </Button>
   </top>
   <bottom>
        <AnchorPane prefHeight="472.0" prefWidth="300.0" BorderPane.alignment="CENTER">
            <children>
                <TableView fx:id="tblDisplay" nodeOrientation="LEFT_TO_RIGHT" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
                    <placeholder>
                        <Label />
                    </placeholder>
                    <columns>
                        <TableColumn fx:id="idTblCol" editable="false" prefWidth="46.0" resizable="false" sortable="false" text="ID" />
                        <TableColumn fx:id="wordTblCol" editable="false" prefWidth="159.0" resizable="false" sortable="false" text="WORD" />
                        <TableColumn fx:id="pointsTblCol" editable="false" prefWidth="74.0" resizable="false" text="SCORE" />
                    </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
                </TableView>
            </children>
        </AnchorPane>
   </bottom>
   <center>
      <Separator prefWidth="200.0" BorderPane.alignment="CENTER" />
   </center>
</BorderPane>
