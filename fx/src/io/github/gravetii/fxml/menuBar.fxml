<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>

<MenuBar xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.172-ea">
    <menus>
        <Menu mnemonicParsing="false" text="File">
            <items>
                <MenuItem fx:id="newGameMenuItem" mnemonicParsing="false" onAction="#newGame" text="New Game"/>
                <Menu mnemonicParsing="false" text="Settings">
                    <items>
                        <MenuItem fx:id="editThemeMenuItem" mnemonicParsing="false" onAction="#editTheme"
                                  text="Change theme"/>
                        <SeparatorMenuItem mnemonicParsing="false"/>
                        <MenuItem fx:id="gameTimeMenuItem" mnemonicParsing="false" onAction="#setGameTime"
                                  text="Configure game time"/>
                    </items>
                </Menu>
                <SeparatorMenuItem mnemonicParsing="false"/>
                <MenuItem fx:id="exitMenuItem" mnemonicParsing="false" onAction="#exit" text="Exit"/>
            </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
            <items>
                <MenuItem fx:id="aboutMenuItem" mnemonicParsing="false" onAction="#showAbout" text="About"/>
                <MenuItem fx:id="whatMenuItem" mnemonicParsing="false" onAction="#whatIsIt" text="What is it?"/>
            </items>
        </Menu>
    </menus>
</MenuBar>
