<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" prefHeight="520.0" prefWidth="300.0"
      xmlns="http://javafx.com/javafx/8.0.172-ea">
    <children>
        <Button id="goBtn" fx:id="goBtn" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onGoBtnClick"
                prefHeight="83.0" prefWidth="200.0" text="GO">
            <VBox.margin>
                <Insets bottom="50.0" left="50.0" right="50.0" top="50.0"/>
            </VBox.margin>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
        </Button>
        <Separator prefWidth="200.0"/>
        <AnchorPane VBox.vgrow="ALWAYS">
            <children>
                <TableView fx:id="tblDisplay" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0"
                           AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
                    <placeholder>
                        <Label/>
                    </placeholder>
                    <columns>
                        <TableColumn fx:id="idTblCol" editable="false" prefWidth="53.0" sortable="false" text="ID"/>
                        <TableColumn fx:id="wordTblCol" editable="false" prefWidth="138.0" sortable="false"
                                     text="WORD"/>
                        <TableColumn fx:id="pointsTblCol" editable="false" prefWidth="88.0" text="SCORE"/>
                    </columns>
                </TableView>
            </children>
        </AnchorPane>
    </children>
</VBox>
