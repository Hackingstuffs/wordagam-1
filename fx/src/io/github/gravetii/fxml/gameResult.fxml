<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="200.0" prefWidth="300.0"
            xmlns="http://javafx.com/javafx/8.0.172-ea">
    <center>
        <AnchorPane prefHeight="520.0" prefWidth="300.0" BorderPane.alignment="CENTER">
            <children>
                <TableView fx:id="tblDisplay" prefHeight="400.0" prefWidth="365.0" AnchorPane.bottomAnchor="10.0"
                           AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
                    <placeholder>
                        <Label/>
                    </placeholder>
                    <columns>
                        <TableColumn fx:id="idTblCol" editable="false" prefWidth="47.0" resizable="false" text="ID"/>
                        <TableColumn fx:id="wordTblCol" editable="false" prefWidth="148.0" resizable="false"
                                     sortable="false" text="WORD"/>
                        <TableColumn fx:id="pointsTblCol" editable="false" prefWidth="84.0" resizable="false"
                                     text="SCORE"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </children>
        </AnchorPane>
    </center>
</BorderPane>
